# GemNet Backend Environment Variables
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gemnet_db
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=gemnet_db

# JWT Configuration
JWT_SECRET=mySecretKeyForGemNetApplicationThatShouldBeAtLeast256BitsLong
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=production

# File Storage Configuration
FILE_STORAGE_PATH=./uploads

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_GEMNET=INFO

# Security Configuration
BCRYPT_STRENGTH=10

# File Upload Limits
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# OpenCV Configuration
OPENCV_MODEL_PATH=./models

# Tesseract Configuration
TESSDATA_PREFIX=./tessdata

# MongoDB Express (for development)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (for future caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# Development Configuration
DEBUG_MODE=false
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true
